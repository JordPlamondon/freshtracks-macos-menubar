{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "FreshTracks",
  "version": "0.1.0",
  "identifier": "com.freshtracks.menubar",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "FreshTracks",
        "width": 380,
        "height": 450,
        "decorations": false,
        "center": false,
        "visible": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "resizable": false,
        "transparent": true,
        "focus": true,
        "fullscreen": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
